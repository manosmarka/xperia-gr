---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from '../lib/sanity';

const query = `*[_type == "news"] | order(date desc){
  headline,
  summary,
  sourceName,
  sourceUrl,
  date,
  tags
}`;

const items = await sanityClient.fetch(query);
---

<Layout title="News - Xperia.gr">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-orbitron font-bold mb-8 text-electric-cyan">News Hub</h1>

    {items.length === 0 && (
      <p class="text-cyber-grey">No news snippets yet. Add some "AI News Snippet" documents in Sanity.</p>
    )}

    <div class="space-y-4">
      {items.map((item: any) => (
        <article class="bg-midnight-glass/70 border border-white/10 rounded-2xl p-4 flex flex-col gap-2">
          <header class="flex flex-wrap items-baseline justify-between gap-2">
            <h2 class="text-lg font-semibold text-starlight">{item.headline}</h2>
            {item.date && (
              <time class="text-xs text-cyber-grey">{new Date(item.date).toLocaleDateString()}</time>
            )}
          </header>

          {item.summary && (
            <p class="text-sm text-cyber-grey">{item.summary}</p>
          )}

          <div class="flex flex-wrap items-center gap-3 text-xs text-cyber-grey mt-1">
            {item.sourceName && (
              <span>
                Source: {item.sourceUrl ? (
                  <a href={item.sourceUrl} class="text-electric-cyan hover:underline" target="_blank" rel="noreferrer">{item.sourceName}</a>
                ) : (
                  item.sourceName
                )}
              </span>
            )}
            {item.tags && item.tags.length > 0 && (
              <span>
                Â· {item.tags.join(', ')}
              </span>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
