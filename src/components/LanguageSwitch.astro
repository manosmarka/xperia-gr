---
const { currentLocale } = Astro;
---
<div class="flex gap-2 text-sm border-l border-cyber-grey pl-4">
  <a 
    href="/el" 
    class={`font-bold transition-colors ${currentLocale === 'el' ? 'text-electric-cyan' : 'text-starlight hover:text-electric-cyan'}`}
  >
    EL
  </a>
  <span class="text-cyber-grey">|</span>
  <a 
    href="/" 
    class={`font-bold transition-colors ${currentLocale === 'en' ? 'text-electric-cyan' : 'text-starlight hover:text-electric-cyan'}`}
  >
    EN
  </a>
</div>
