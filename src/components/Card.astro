---
interface Props {
	title: string;
	body: string;
	href: string;
    date?: string;
    tags?: string[];
}

const { href, title, body, date, tags } = Astro.props;
---

<li class="list-none flex">
	<a href={href} class="flex flex-col w-full p-6 rounded-2xl bg-midnight-glass/80 backdrop-blur-sm border border-white/10 hover:border-electric-cyan transition-all hover:glow-box group">
        {date && <span class="text-xs text-cyber-grey mb-2 font-mono">{date}</span>}
		<h2 class="text-xl font-orbitron font-bold text-starlight mb-2 group-hover:text-electric-cyan transition-colors">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="text-cyber-grey text-sm line-clamp-3 mb-4 flex-grow">
			{body}
		</p>
        {tags && (
            <div class="flex gap-2 mt-auto flex-wrap">
                {tags.map(tag => (
                    <span class="text-xs px-2 py-1 rounded-full bg-neural-blue/20 text-electric-cyan border border-neural-blue/30">
                        #{tag}
                    </span>
                ))}
            </div>
        )}
	</a>
</li>
